{
  "version": 2,
  "routes": [
    {
      "src": "^/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "^/$",
      "dest": "/index.html"
    },
    {
      "src": "^/dashboard$",
      "dest": "/dashboard.html"
    },
    {
      "src": "^/404$",
      "dest": "/404.html"
    },
    {
      "src": ".*\\.html$",
      "status": 404,
      "dest": "/404.html"
    },
    {
      "src": "^(.*)$",
      "dest": "/404.html"
    }
  ]
}
