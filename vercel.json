{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" },
    { "src": "**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "^/api/(.*)$", "dest": "/api/$1" },

    { "src": "^/$", "dest": "/public/index.html" },
    { "src": "^/dashboard$", "dest": "/public/dashboard.html" },
    { "src": "^/404$", "dest": "/public/404.html" },

    { "handle": "filesystem" },

    { "src": ".*", "dest": "/public/404.html" }
  ]
}
