{
  "version": 2,
  "routes": [
    { "src": "^/api/(.*)$", "dest": "/api/$1" },

    { "handle": "filesystem" },

    { "src": "^/$", "dest": "/index.html" },
    { "src": "^/dashboard$", "dest": "/dashboard.html" },
    { "src": "^/no-access$", "dest": "/no-access.html" },
    { "src": "^/404$", "dest": "/404.html" },

    { "src": ".*\\.html$", "dest": "/404.html" },

    { "src": ".*", "dest": "/404.html" }
  ]
}
